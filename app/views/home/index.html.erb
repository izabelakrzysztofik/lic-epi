    <div class="col s12 valign-wrapper" style="height: 90%">
      <div class="col l8 offset-l4 s12 valign">
        <% @degrees.each do |degree| %>
          <%= link_to degree.degree_name, degree, :class => "waves-effect waves-light grey btn-large position-button" %>
        <% end %>
        <a class="waves-effect waves-light grey btn-large modal-trigger enter" href="#modal1">
          <img src="/assets/enter.png" class="enterArrow">
          enter
        </a>
      </div>
    </div>


    <div class="col s12" style="background:white; margin-bottom: 100px;">
      <div class="col s10 offset-s1 center-align">
        <h2 id="namme" style="color:#000; margin: 0;padding: 30px 0">
          Aplikacja dla kandydatów na studia Elektroniczne Przetwarzanie Infromacji
        </h2>
      </div>
    </div>

